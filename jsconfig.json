{
    "compilerOptions": {
      "checkJs": true,
      "moduleResolution": "nodenext",
      "target": "es2020",
      "module": "NodeNext",
    },
    "include": [
      "src/*.js",
      "lib/*.js",
      "tests/*.js"
    ],
    "exclude": [
      "dist",
      "node_modules",
      "build",
      ".vscode",
      "coverage",
      "jspm_packages",
      "tmp",
      "temp",
      "bower_components",
      ".npm",
      ".yarn"
    ]
  }